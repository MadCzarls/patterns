{% extends 'base.html.twig' %}

{% block title %}Abstract factory{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Factory: {{ factory.getName() }}</h1>

    <ul>
        <li>Your diet's calories intake should be around <code>{{ caloriesIntake.getValue() }}</code></li>
        <li>Your exercise should include <code>{{ exerciseSet.getExercises() | join(', ') }}</code></li>
    </ul>
</div>
{% endblock %}
