{% extends 'base.html.twig' %}

{% block title %}Abstract factory{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Fill notification data</h1>

    {{ form_start(form) }}
    {{ form_rest(form) }}

    <button>Submit</button>

    {{ form_end(form) }}

    {% if requestHandled %}
        Notification data:
        <ul>
            <li>
                Factory name: {{ notificationDTO.getFactoryName() }}
            </li>
            <li>
                Receiver: {{ notificationDTO.getReceiver() }} ({{ notificationDTO.isValidReceiver() ? 'valid' : 'not valid' }})
            </li>
            <li>
                Parsed message: <code>{{ notificationDTO.getMessage() }}</code>
            </li>
        </ul>
    {% endif %}
</div>
{% endblock %}
